{% extends ":default:index.html.twig" %}

{% block content %}
{% if app.user.getIsDoctor == true %}
<h3>{{ 'doc.hello'|trans({},"messages") }}</h3><br>

<form action="{{ path('docRegister', {'slug':slug}) }}" {{ form_enctype(form) }} method="POST">
    <div class="form-horizontal col-md-12">
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.name) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.name, 'account.name'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.lastname) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.lastname, 'account.lastname'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.surname) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.surname, 'account.surname'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.age) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.age, 'account.age'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.adress) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.adress, 'account.adress'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.phone) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.phone, 'account.phone'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.job_title) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.job_title, 'account.job'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.job_title, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.other_info) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.other_info, 'account.other'|trans({},"messages")) }}</div>
            <div class="col-sm-6">{{ form_widget(form.other_info, {'attr': {'class': 'form-control ', 'style':'height: 200px'}}) }}</div>
        </div>

        <div class=" form-group">
            <input class="col-md-offset-7 blogin btn btn-primary" type="submit" value="{{ 'registration.submit'|trans({},'FOSUserBundle') }}" />
        </div>

    </div>

</form>
{% endif %}
{% endblock content %}


