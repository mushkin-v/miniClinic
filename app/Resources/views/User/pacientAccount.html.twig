{% extends ":default:index.html.twig" %}

{% block content %}
<h3>Welcome {{ app.user.getUserName }}, you can update your details:</h3><br>
<form action="{{ path('pacientAccount') }}" {{ form_enctype(form) }} method="POST">
    <div class="form-horizontal col-md-12">
        <div class="form-group">
            <div class="col-md-12">{{ form_errors(form.name) }}</div>
            <div class="col-md-2 control-label">{{ form_label(form.name, 'Enter your name:') }}</div>
            <div class="col-md-6">{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.lastname) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.lastname, 'Enter your lastname:') }}</div>
            <div class="col-sm-6">{{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.surname) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.surname, 'Enter your surname:') }}</div>
            <div class="col-sm-6">{{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.age) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.age, 'Enter your age:') }}</div>
            <div class="col-sm-6">{{ form_widget(form.age, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.adress) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.adress, 'Enter your adress:') }}</div>
            <div class="col-sm-6">{{ form_widget(form.adress, {'attr': {'class': 'form-control'}}) }}</div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">{{ form_errors(form.phone) }}</div>
            <div class="col-sm-2 control-label">{{ form_label(form.phone, 'Enter your phone:') }}</div>
            <div class="col-sm-6">{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <input type="hidden" name="{{ form.card_number.vars.full_name }}" value="{{ app.user.getCardNumber  }}">

        <input type="hidden" name="{{ form.email.vars.full_name }}" value="{{ app.user.getEmail  }}">
        
        <div class=" form-group">
            <input class="col-md-offset-7 blogin btn btn-primary" type="submit" value="{{ 'registration.submit'|trans({},'FOSUserBundle') }}" />
        </div>

    </div>
</form>
{% endblock content %}


